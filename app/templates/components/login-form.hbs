
{{#auth-form api=api
             submitAction="login"
             model=model
             formTitle="Login Form"
             formSuccessMessage="Authorization is succeeded!"
             formFailedMessage="Server error! Authorization is failed! Please retry later..."
             submitButton="Login"
             cancelButton="Reset"
             onCancel="cancelForm"
}}
  {{#input-control value=model.username
                   errors=model.validationErrors.username
  }}
    Username
  {{/input-control}}

  {{#input-control type="password"
                   value=model.password
                   errors=model.validationErrors.password
  }}
    Password
  {{/input-control}}
{{/auth-form}}
